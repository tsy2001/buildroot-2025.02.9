config BR2_PACKAGE_U8G2_FONTS
    bool "u8g2-fonts (libu8g2font.so, only selected fonts)"
    depends on BR2_PACKAGE_U8G2_CORE
    help
      Build selected u8g2 font C files into a separate shared library.
      Put the font .c files you need under:
        $(BR2_EXTERNAL_U8G2SPLIT_PATH)/package/u8g2-fonts/fonts
      Example generated by bdfconv:
        u8g2_font_misans_16_cjk.c
